{
    "name": "example/awesome-php-app",
    "description": "An awesome PHP application with modern features",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Jane Smith",
            "email": "jane@example.com",
            "homepage": "https://janesmith.dev",
            "role": "Lead Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "symfony/framework-bundle": "^6.3",
        "symfony/console": "^6.3",
        "symfony/dotenv": "^6.3",
        "symfony/flex": "^2.3",
        "symfony/runtime": "^6.3",
        "symfony/yaml": "^6.3",
        "doctrine/doctrine-bundle": "^2.10",
        "doctrine/doctrine-migrations-bundle": "^3.2",
        "doctrine/orm": "^2.16",
        "twig/twig": "^3.7",
        "symfony/twig-bundle": "^6.3",
        "symfony/security-bundle": "^6.3",
        "lexik/jwt-authentication-bundle": "^2.19",
        "nelmio/cors-bundle": "^2.3",
        "symfony/validator": "^6.3",
        "symfony/serializer": "^6.3",
        "phpdocumentor/reflection-docblock": "^5.3",
        "symfony/property-info": "^6.3"
    },
    "require-dev": {
        "symfony/maker-bundle": "^1.50",
        "symfony/phpunit-bridge": "^6.3",
        "symfony/stopwatch": "^6.3",
        "symfony/web-profiler-bundle": "^6.3",
        "phpunit/phpunit": "^9.6",
        "doctrine/doctrine-fixtures-bundle": "^3.4",
        "fakerphp/faker": "^1.23",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.25",
        "symfony/debug-bundle": "^6.3",
        "symfony/var-dumper": "^6.3"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "App\\Entity\\": "src/Entity/",
            "App\\Repository\\": "src/Repository/",
            "App\\Controller\\": "src/Controller/",
            "App\\Service\\": "src/Service/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "test": [
            "php bin/phpunit"
        ],
        "test-coverage": [
            "php bin/phpunit --coverage-html coverage"
        ],
        "cs-fix": [
            "php-cs-fixer fix"
        ],
        "cs-check": [
            "php-cs-fixer fix --dry-run"
        ],
        "phpstan": [
            "phpstan analyse src tests --level=8"
        ],
        "db-reset": [
            "php bin/console doctrine:database:drop --force --if-exists",
            "php bin/console doctrine:database:create",
            "php bin/console doctrine:migrations:migrate --no-interaction",
            "php bin/console doctrine:fixtures:load --no-interaction"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "6.3.*",
            "docker": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}