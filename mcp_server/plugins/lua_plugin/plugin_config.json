{
  "plugin": {
    "name": "lua",
    "language": "lua",
    "version": "1.0.0",
    "type": "hybrid",
    "author": "MCP Team",
    "description": "Comprehensive Lua plugin with support for modules, metatables, coroutines, and game development frameworks"
  },
  "extensions": [
    ".lua",
    ".rockspec"
  ],
  "features": {
    "tree_sitter_support": true,
    "caching": true,
    "async_processing": true,
    "semantic_analysis": true
  },
  "patterns": {
    "function": "function\\s+(\\w+)\\s*\\(",
    "class": "local\\s+(\\w+)\\s*=\\s*\\{",
    "variable": "local\\s+(\\w+)\\s*="
  },
  "node_types": {
    "function": [
      "function_declaration",
      "local_function",
      "method_definition"
    ],
    "class": [
      "table_constructor"
    ],
    "variable": [
      "variable_declaration",
      "local_variable_declaration"
    ]
  },
  "performance": {
    "max_file_size": 10485760,
    "cache_ttl": 3600,
    "batch_size": 100
  }
}